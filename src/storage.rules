rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Regla general para la carpeta de evidencias/adjuntos
    // Ajustada para permitir lectura a cualquier usuario autenticado del sistema
    match /{allPaths=**} {
      allow read: if request.auth != null;
      
      // Escritura: Solo usuarios autenticados, validando tama√±o (<10MB por si acaso) 
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024; 
    }
  }
}